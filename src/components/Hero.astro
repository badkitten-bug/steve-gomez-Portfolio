---
import Button from '@components/ui/Button.astro';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-6 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				¡Hola! Soy <span class="text-green">Steve</span>, desarrollador full-stack con <span class="text-green">+4 años</span> de experiencia.
			</h1>
			<div class="mb-8">
				<p class="text-lg text-gray-600 dark:text-gray-300 lg:text-xl">
					Especializado en <span class="text-amber font-semibold">NestJS</span>, <span class="text-amber font-semibold">Go</span>, <span class="text-amber font-semibold">Astro</span> y <span class="text-amber font-semibold">JavaScript</span>
				</p>
			</div>
		</div>
		<div class="mb-10">
			<a href="#about">
				<Button style={'primary'} size={'lg'} class={'flex'} name="learn more">¡Conoce más!</Button>
			</a>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex w-1/2 items-center justify-center">
		<img
			src="/hero.svg"
			alt="Coding boys"
			width={500}
			height={500}
			loading="eager"
			class="max-w-full h-auto"
		/>
	</div>
</section>
