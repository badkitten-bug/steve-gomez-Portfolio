---
interface Props {
	size?: 'sm' | 'md' | 'lg';
	block?: boolean;
	style?: 'primary';
	class?: string;
	[x: string]: any;
}

const { size = 'md', style = 'primary', block, class: className, href, ...rest } = Astro.props;

const sizes = {
	sm: 'px-4 py-1.5',
	md: 'px-5 py-2.5',
	lg: 'px-6 py-3',
};

const styles = {
	primary: 'bg-black text-white hover:bg-green  border-2 border-transparent',
};
---

{href ? (
	// Si se pasa el href, renderizamos un enlace <a>
	<a
		{...rest}
		href={href}
		class:list={[
			'rounded-xl text-center transition focus-visible:ring-2 ring-offset-2 ring-green',
			block && 'w-full',
			sizes[size],
			styles[style],
			className,
		]}
	>
		<slot />
	</a>
) : (
	// Si no hay href, renderizamos un bot√≥n
	<button
		{...rest}
		class:list={[
			'rounded-xl text-center transition focus-visible:ring-2 ring-offset-2 ring-green',
			block && 'w-full',
			sizes[size],
			styles[style],
			className,
		]}
	>
		<slot />
	</button>
)}