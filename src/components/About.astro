---
import { getI18n } from '@content/i18n';
const url = new URL(Astro.request.url);
const lang = url.searchParams.get('lang') || 'es';
const { t } = getI18n(lang);
---

<section
	data-testid="about"
	id="about"
	class="mb-10 mt-auto flex flex-col items-center justify-center bg-blue bg-opacity-10 lg:mb-10 lg:h-screen lg:flex-row"
>
	<div class="mb-10 flex w-full flex-col items-center justify-center lg:mb-0 lg:w-1/2">
		<h2 class="font-monospace text-2xl text-green lg:text-4xl">{t('about.title')}</h2>
		<span class="mb-6 ml-2 h-1 w-10 bg-green"></span>
	</div>

	<div
		class="mx-10 my-4 w-full text-center text-base text-black dark:text-white lg:mx-0 lg:w-1/2 lg:text-left lg:text-2xl"
	>
		<p class="mx-4 mb-4">
			<span class="text-amber font-semibold">{t('about.years')}</span>
		</p>
		<p class="mx-4 mb-4">
			{t('about.specialized')}
		</p>
		<p class="mx-4 mb-4">
			{t('about.experience')}
		</p>
		<p class="mx-4 mb-2">{t('about.cta')}</p>
	</div>
</section>
