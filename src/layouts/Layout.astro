---
import Footer from '@components/Footer.astro';
import Navbar from '@components/Navbar.astro';
import { SEO } from 'astro-seo';

export interface LayoutProps {
	title: string;
}

const { title = 'Steve Gomez | Web developer' } = Astro.props as LayoutProps;
const url = new URL(Astro.request.url);
const lang = url.searchParams.get('lang') || 'es';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth" data-testid="html">
	<head>
		<SEO
			title="Steve Gomez | Web developer"
			description="Explora mi portafolio donde la magia de Astro y la elegancia de Svelte se unen para crear experiencias web únicas. Soy un apasionado desarrollador web con experiencia en desarrollo frontend, Astro, Svelte, y otras tecnologías modernas. Descubre cómo he llevado a cabo proyectos innovadores utilizando estas tecnologías para lograr resultados impactantes. ¡Bienvenido a un mundo donde el código cobra vida y la creatividad encuentra su mejor expresión!"
		/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<title>{title}</title>
	</head>
	<body
		class="mx-auto max-w-screen-xl bg-white px-5 font-sans text-white dark:bg-black xs:text-[16px] md:text-[18px]"
	>
		<Navbar lang={lang} />
		<slot />
		<Footer />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
